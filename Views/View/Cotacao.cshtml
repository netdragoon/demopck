@{ Layout = null; }
<div class="panel panel-default" ng-controller="cotacao">
    <div class="panel-heading">COTAÇÃO DE DOLAR</div>
    <div class="panel-body" style="min-height:450px">
        <div ng-if="!data.Name">
            <p><img src="~/image/ajax-loader.gif" border="0" style="border:0px; vertical-align:middle" /></p>
        </div>
        <div class="row" ng-if="data.Name">            
            <div class="col-lg-12">
                <em>Estilo:</em>
                <p class="text-primary">{{data.Name}} ({{data.Id}})</p>
            </div>
            <div class="col-lg-12">
                <em>Preço de Venda:</em>
                <p class="text-primary">{{data.Ask}}</p>
            </div>
            <div class="col-lg-12">
                <em>Preço de Compra:</em>
                <p class="text-primary">{{data.Bid}}</p>
            </div>
            <div class="col-lg-12">
                <em>Data e Hora:</em>
                <p class="text-primary">
                    {{data.dateBR}} {{data.TimeOfString}}
                </p>
            </div>
            <div class="col-lg-12">
                <button type="button" ng-click="submit();" class="btn btn-info">
                    <span class="glyphicon glyphicon-refresh"></span> Atualizar
                </button>
            </div>
        </div>
    </div>
    <div class="panel-footer"><a href="/#/" class="btn btn-success"><span class="glyphicon glyphicon-arrow-left"></span> Voltar</a></div>
</div>