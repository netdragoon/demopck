@{ Layout = null; }
<div class="panel panel-default" ng-controller="cotacao">
    <div class="panel-heading">COTAÇÃO DE DOLAR</div>
    <div class="panel-body" style="min-height:450px">
        <div class="row">
            <div class="col-lg-12">
                <em>Estilo:</em>
                <p class="text-primary">{{data.Name}} ({{data.Id}})</p>
            </div>
            <div class="col-lg-12">
                <em>Preço de Venda:</em>
                <p class="text-primary">{{data.Ask}}</p>
            </div>
            <div class="col-lg-12">
                <em>Preço de Compra:</em>
                <p class="text-primary">{{data.Bid}}</p>
            </div>
            <div class="col-lg-12">
                <em>Data e Hora:</em>
                <p class="text-primary">
                    {{data.dateBR}} {{data.TimeOfString}}
                </p>
            </div>
        </div>
    </div>
    <div class="panel-footer"><a href="/#/" class="btn btn-success"><span class="glyphicon glyphicon-arrow-left"></span> Voltar</a></div>
</div>